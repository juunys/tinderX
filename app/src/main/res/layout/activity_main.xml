<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/facebookButton"
        android:layout_width="269dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="96dp"
        android:background="@drawable/fb_shape"
        android:onClick="fbClicked"
        android:stateListAnimator="@null"
        android:text="fazer login com facebook"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="14sp" />

    <Button
        android:id="@+id/phoneButton"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:background="@drawable/my_shape"
        android:onClick="phoneClicked"
        android:stateListAnimator="@null"
        android:text="Entrar com o número de telefone"
        android:textColor="#a6a6a6"
        android:textSize="14sp" />

    <Button
        android:id="@+id/condButton"
        android:layout_width="22dp"
        android:layout_height="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="111dp"
        android:background="@color/browser_actions_bg_grey"
        android:onClick="condClicked"
        android:text="!"
        android:textColor="#bababa"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/condButton"
        android:layout_marginStart="105dp"
        android:text="Ao conectar, você concorda com nossos termos e condições"
        android:textSize="8sp" />

</RelativeLayout>